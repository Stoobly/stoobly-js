{
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "module": "commonjs",
    "moduleResolution": "node", 
    "target": "es2017",
    "checkJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@core/*": ["./src/core/*"],
      "@models/*": ["./src/models/*"],
      "@types/*": ["./src/types/*"]
    },
    "strict": true,
    "strictFunctionTypes": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/stripe.esm.node.ts", "./src/stripe.esm.worker.ts"],
}
