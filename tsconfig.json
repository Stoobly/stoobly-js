{
  "compilerOptions": {
    "noEmit": true,
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@core/*": ["./src/core/*"],
      "@models/*": ["./src/models/*"],
      "@types/*": ["./src/types/*"]
    },
    "types": ["jest", "node"]
  },
  "extends": "./tsconfig.cjs.json",
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "ts-node": {
    "experimentalResolver": true
  }
}
